#
# wm independent hotkeys
#

# terminal emulator
super + Return
	tabbed -r 2 st -w ''

# program launcher
super + p
	rofi -show drun

super + shift + p
	rofi -show run

# launch task manager
ctrl + shift + Escape
	kitty btop

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# bluetooth headsed media controls (mpris-proxy and Playerctl required)
XF86AudioPlay
	playerctl play-pause

XF86AudioPause
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

# screenshots /w scrot
super + @Print
	scrot '/home/korei/Pictures/Screens/%Y-%m-%d-%T-screenshot.png'

super + shift + @Print
	scrot '/home/korei/Pictures/Screens/%Y-%m-%d-%T-screenshot.png' -s -f

super + ctrl + @Print
	scrot '/home/korei/Pictures/Screens/%Y-%m-%d-%T-screenshot.png' -u
##############

super + e
	pcmanfm
#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# # send the newest marked node to the newest preselected node
# super + y
# 	bspc node newest.marked.local -n newest.!automatic.local

# # swap the current node and the biggest window
# super + g
# 	bspc node -s biggest.window

#
# state/flags
#

# set the window sta$HOME/.config/polybar/launch.shte
super + {t,shift + t,s,f}
	bspc node -t {tiled && polybar-msg cmd show,pseudo\_tiled,floating,fullscreen && polybar-msg cmd hide}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -t {tiled && polybar-msg cmd show,pseudo\_tiled,floating,fullscreen && polybar-msg cmd hide}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the next/previous desktop in the current monitor with scroll wheel
super + button{4,5}
	bspc desktop -f {prev,next}.local

# fosuc next monitor
super + shift + bracket{left,right}
	bspc monitor --focus {prev,next}

# # focus the last node/desktop
# super + {grave,Tab}
# 	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} 'pointed:^{1-9,10}'

# expand/contract a window 
super + alt + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


