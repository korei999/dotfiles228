# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd; \
    notify-send "sxhkd restarted"

# launch task manager
ctrl + shift + Escape
	st btop

# bluetooth headset media controls (mpris-proxy and Playerctl required)
XF86AudioPlay
	playerctl play-pause

XF86AudioPause
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

# Sleep
super + ctrl + alt + BackSpace
    systemctl suspend

# Offay
super + ctrl + alt + Escape
    systemctl poweroff

# Slock
super + shift + BackSpace
    slock

# Dunst
super + ctrl + alt + Pause
    dunstctl set-paused toggle; \
    /home/korei/.dwm/dunstcheck.sh

# Pulsemixer
super + Pause
    st pulsemixer

# systemctl restart --user pipewire
super + ctrl + alt + backslash
    systemctl restart --user pipewire; \
    notify-send "pipewire restarted"
